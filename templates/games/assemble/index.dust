{>"layout/layout.dust"/}

{<content}
<div class="col-md-10 col-sm-10">
  <span class="pull-left glyphicon icon-assemble" style="font-size: 52px; width: 64px; height: 64px; color: #428bca;"></span>
  <h3>Baukasten</h3>
  {game_assemble_explain|s}
  <div class="list-group">
    <a href="game?level=1" class="well list-group-item">
    	<strong>Schwierigkeitsstufe 1</strong>
      <span class="badge">{#_user.stats.assemble.level1_count_played}{.}{:else}0{/_user.stats.assemble.level1_count_played} mal gespielt</span>
      <br>
      {game_assemble_level1|s}
    </a>
    <a href="game?level=2" class="well list-group-item">
    	<strong>Schwierigkeitsstufe 2</strong>
      <span class="badge">{#_user.stats.assemble.level2_count_played}{.}{:else}0{/_user.stats.assemble.level2_count_played} mal gespielt</span>
      <br>
      {game_assemble_level2|s}
    </a>
  </div>
  <p class="text-muted"></p>
</div>
{/content}
