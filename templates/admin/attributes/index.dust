{>"layout/layout.dust"/}

{<content}
<style>
#enumsList .delete-enum { cursor: pointer; }
#enumsList li { cursor: move; }
</style>
<div class="col-md-8 col-sm-4">
  <h3>Attribute Ãœbersicht</h3>
  <a href="javascript:$('#create_attribute').toggle()">Neues Attribut erstellen</a>
  <div class="row">
    <div class="col-sm-8 col-md-8">
      <form class="form-horizontal" id="create_attribute" action="/admin/attributes/create" role="form" method="post" style="display:none; margin-bottom:30px;">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="attribute_name">Name</label>
          <div class="col-sm-10">
            <input name="name" type="text" id="attribute_name" class="form-control" required pattern="^[a-z][a-z0-9_]*$">
            <p class="help-block">Nur kleine Buchstaben, Zahlen und Unterstriche erlaubt</p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="attribute_title">Titel</label>
          <div class="col-sm-10">
            <input name="title" type="text" id="attribute_title" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="attribute_type">Typ</label>
          <div class="col-sm-10">
            <select name="type" id="attribute_type" class="form-control">
              {#attributeTypes}
              <option value="{name}">{name} - {explain}</option>
              {/attributeTypes}
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="is_enum" value="1" /> Vordefinierte Werte
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Erstellen</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-md-8">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Titel</th>
          <th>Typ</th>
          <th>Vordefiniert</th>
          <th></th>
        </tr>
        {#attributes}
        <tr>
          <td>{name}</td>
          <td>{title}</td>
          <td>{type}</td>
          <td>{?is_enum}Ja{:else}Nein{/is_enum}</td>
          <td>{?is_enum}<a href="/admin/attributes/show-enums?attribute={name}" data-target="#enumsModal" data-toggle="modal">Werte</a>{/is_enum}</td>
        </tr>
        {:else}
        <tr><td colspan="3">Bisher keine Attribute vorhanden</td></tr>
        {/attributes}
      </table>
    </div>
  </div>
  <div class="modal fade" id="enumsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
</div>
<script>
$('body').on('shown.bs.modal', '#enumsModal', function (a) {
  $modal = $(this);
  $(this).find('#enumsList').sortable();
  $(this).find('#enumsList').disableSelection();
  $('#enumsList').on('click', '.delete-enum', function(){
    $(this).parents('li').remove();
  });
  $(this).find('#addNewEnum').click(function(){
    var $input = $('#newEnumValue'),
      newValue = $input.val();
    $('#enumsList').append('<li class="list-group-item">' + newValue + '<input type="hidden" name="enums[]" value="' + newValue + '" /><span class="badge delete-enum"><span class="glyphicon glyphicon-remove"></span></span></li>');
    $input.val('');
  });
  $(this).find('#saveEnums').click(function(){
    var serialized = $('#enumsForm').serialize();
    $.post('save-enums', serialized, function(data) {
      console.log(data.result);
      $modal.modal('hide');
    });
  });
});

$('body').on('hidden.bs.modal', '#enumsModal', function () {
  $(this).removeData('bs.modal');
});
</script>
{/content}